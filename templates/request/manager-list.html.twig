{% extends 'base.html.twig' %}

{% block body %}
    <main class="pt-5 mx-lg-5">
        <div class="container-fluid">

            <!-- Heading -->
            <div class="card mb-4 wow fadeIn">

                <!--Card content-->
                <div class="card-body d-sm-flex justify-content-between">

                    <h4 class="mb-2 mb-sm-0 pt-1">
                        <a href="#" target="_blank">Главная</a>
                        <span>/</span>
                        <span>Заявки</span>
                    </h4>
                    <button type="button" class="btn btn-outline-secondary waves-effect some_btn_rise">Поработать</button>
                    <form class="d-flex justify-content-center">
                        <!-- Default input -->
                        <input type="search" placeholder="Дата с" aria-label="Search" class="form-control card_form mr-2">
                        <input type="search" placeholder="Дата по" aria-label="Search" class="form-control card_form">
                        <input type="search" placeholder="Поиск по клиентам" aria-label="Search" class="form-control card_form ml-4" style="min-width: 180px;">
                        <button class="btn btn-primary btn-sm my-0 p" type="submit">
                            <i class="fa fa-search"></i>
                        </button>

                    </form>

                </div>

            </div>
            <!-- Heading -->


            <!-- Central Modal Large Info-->
            <div class="modal fade" id="centralModalLGRequestMain" tabindex="-1" role="dialog"
                 aria-labelledby="myModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg modal-notify modal-info" role="document">
                    <!--Content-->
                    <div class="modal-content">
                        <!--Header-->
                        <div class="modal-header">
                            <p class="heading lead">Карточка клиента</p>
                            <button type="button" class="btn btn-outline-secondary waves-effect some_btn_rise">Печать</button>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="position: relative;">
                                <span aria-hidden="true" class="white-text">&times;</span>
                            </button>
                        </div>

                        <!--Body-->
                        <div class="modal-body">
                            <!-- Extended default form grid -->
                            <form>
                                <!-- Grid row -->
                                <div class="form-row">
                                    <!-- Default input -->
                                    <div class="form-group col-md-3">
                                        <label for="inputEmail4">Ответственный</label>
                                        <input type="email" class="form-control" id="inputEmail4" placeholder="Ответственный менеджер">
                                    </div>
                                    <!-- Default input -->
                                    <div class="form-group col-md-3">
                                        <label for="inputPassword4">Бюджет</label>
                                        <input class="form-control" id="inputPassword4" placeholder="Введите бюджет клиента">
                                    </div>
                                    <!-- Default input -->
                                    <div class="form-group col-md-6">
                                        <label for="inputAddress">ФИО клиента</label>
                                        <input type="text" class="form-control" id="inputAddress" placeholder="Ввидите ФИО клиента">
                                    </div>
                                    <!-- Default input -->
                                </div>
                                <!-- Grid row -->
                                <!-- Grid row -->
                                <div class="form-row">
                                    <!-- Default input -->
                                    <div class="form-group col-md-3">
                                        <label for="inputEmail4">Дата выдачи документа</label>
                                        <input type="email" class="form-control" id="inputEmail4" placeholder="Введите дату выдачи">
                                    </div>
                                    <!-- Default input -->
                                    <div class="form-group col-md-3">
                                        <label for="inputPassword4">Кем выдан документ</label>
                                        <input type="text" class="form-control" id="inputPassword4" placeholder="Ввидите кем выдан документ">
                                    </div>
                                    <!-- Default input -->
                                    <div class="form-group col-md-3">
                                        <label for="inputCity">Документ</label>
                                        <select class="form-control">
                                            <option>Паспорт</option>
                                            <option>Свидетельство о рождении</option>
                                            <option>Вид на жительство</option>
                                            <option>Временное убежище</option>
                                            <option>Другое</option>
                                        </select>
                                    </div>
                                    <!-- Default input -->
                                    <div class="form-group col-md-3">
                                        <label for="inputAddress2">Серия и номер документа</label>
                                        <input type="text" class="form-control" id="inputAddress2" placeholder="Серия и номер документа">
                                    </div>
                                </div>
                                <!-- Grid row -->
                                <!-- Grid row -->
                                <div class="form-row">
                                    <!-- Default input -->
                                    <div class="form-group col-md-4">
                                        <label for="inputCity">Гражданство</label>
                                        <select class="form-control">
                                            <option>Россия</option>
                                            <option>Украина </option>
                                            <option>Беларусь</option>
                                            <option>Казахстан</option>
                                            <option>Узбекистан</option>
                                            <option>Туркмения</option>
                                            <option>Молдавия</option>
                                            <option>Таджикистан</option>
                                            <option>Киргизия</option>
                                            <option>Армения</option>
                                            <option>Азербайджан</option>
                                            <option>Другое</option>
                                        </select>
                                    </div>
                                    <!-- Default input -->
                                    <div class="form-group col-md-4">
                                        <label for="inputPassword4">Место рождения</label>
                                        <input type="text" class="form-control" id="inputPassword4" placeholder="Введите бюджет клиента">
                                    </div>
                                    <!-- Default input -->
                                    <div class="form-group col-md-4">
                                        <label for="inputAddress">Дата рождения</label>
                                        <input type="text" class="form-control" id="inputAddress" placeholder="Ввидите ФИО клиента">
                                    </div>
                                </div>
                                <!-- Grid row -->


                                <!-- Default checked -->
                                <div class="custom-control custom-checkbox mt-3">
                                    <input type="checkbox" class="custom-control-input" id="defaultChecked2" checked>
                                    <label class="custom-control-label" for="defaultChecked2">Если задним числом</label>
                                </div>


                                <!-- Grid row -->
                                <div class="form-row">
                                    <!-- Default input -->
                                    <div class="form-group col-md-4">
                                        <label for="inputCity">Срок регистрации</label>
                                        <select class="form-control">
                                            <option>1 месяц</option>
                                            <option>3 месяца</option>
                                            <option>6 месяцев</option>
                                            <option>год</option>
                                            <option>3 года</option>
                                        </select>
                                    </div>
                                    <!-- Default input -->
                                    <div class="form-group col-md-4">
                                        <label for="inputCity">Срок регистрации с</label>
                                        <input type="text" class="form-control" id="sregs" placeholder="xx.xx.xxxx">
                                    </div>
                                    <!-- Default input -->
                                    <div class="form-group col-md-4">
                                        <label for="inputZip">Срок регистрации по</label>
                                        <input type="text" class="form-control" id="sregpo" placeholder="xx.xx.xxxx">
                                    </div>
                                </div>
                                <!-- Grid row -->

                                <h3 class="mt-4">Данные о доставке</h3>

                                <!-- Grid row -->
                                <div class="form-row">
                                    <!-- Default input -->
                                    <div class="form-group col-md-3">
                                        <label for="inputZip">Дата доставки</label>
                                        <input type="text" class="form-control" id="inputZip" placeholder="Введите дату доставки">
                                    </div>
                                    <!-- Default input -->
                                    <div class="form-group col-md-3">
                                        <label for="inputCity">Время доставки</label>
                                        <input type="text" class="form-control" id="inputCity" placeholder="Введите время доставки">
                                    </div>
                                    <!-- Default input -->
                                    <div class="form-group col-md-3">
                                        <label for="inputZip">Адрес доставки</label>
                                        <input type="text" class="form-control" id="inputZip" placeholder="Введите адрес доставки">
                                    </div>
                                    <!-- Default input -->
                                    <div class="form-group col-md-3">
                                        <label for="inputZip">Станция доствки</label>
                                        <input type="text" class="form-control" id="inputZip" placeholder="Введите станцию доствки">
                                    </div>
                                </div>
                                <!-- Grid row -->


                                <h3 class="mt-4">Документы</h3>

                                <!-- Grid row -->
                                <div class="form-row">
                                    <!-- Default input -->
                                    <div class="form-group col-md-6">
                                        <label for="inputCity">Улица</label>
                                        <input type="text" class="form-control" id="inputCity" placeholder="Введите улицу">
                                    </div>
                                    <!-- Default input -->
                                    <div class="form-group col-md-6">
                                        <label for="inputZip">Район</label>
                                        <input type="text" class="form-control" id="inputZip" placeholder="Введите район">
                                    </div>
                                    <!-- Default input -->
                                    <div class="form-group col-md-6">
                                        <label for="inputZip">Фамилия начальника</label>
                                        <input type="text" class="form-control" id="inputZip" placeholder="Введите фамилию начальника">
                                    </div>
                                    <!-- Default input -->
                                    <div class="form-group col-md-6">
                                        <label for="inputZip">Отделение</label>
                                        <input type="text" class="form-control" id="inputZip" placeholder="Отделение и номер">
                                    </div>
                                </div>
                                <!-- Grid row -->
                                <div class="form-row">
                                    <div class="form-group col-md-6" >
                                        <label for="exampleFormControlTextarea1">Примечание</label>
                                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label for="inputZip">Статус</label>
                                        <select class="form-control">
                                            <option>Обработана</option>
                                            <option>Необработанная</option>
                                            <option>Подтв.заказ и время доставки</option>
                                            <option>Подгатовка документов</option>
                                            <option>Отправил на распечатку</option>
                                            <option>У курьера</option>
                                        </select>
                                    </div>
                                </div>


                                <button type="submit" class="btn btn-primary btn-md">Готово</button>
                            </form>
                            <!-- Extended default form grid -->

                        </div>

                        <!--Footer-->

                    </div>
                    <!--/.Content-->
                </div>
            </div>
            <!-- Central Modal Large Info-->


            {% for date, groupDocRequest in docRequests %}
            <!--Grid row-->
            <div class="row">

                <!--Grid column-->
                <div class="col-md-12 mb-4">

                    <!--Card-->
                    <div class="card">

                        <!--Card content-->
                        <div class="card-body">
                            <h2 class="mb-2">{{ date }}</h2>
                            <button type="button" class="btn btn-outline-secondary waves-effect some_btn_rise">Печать</button>
                            <!-- Table  -->
                            <table class="table table-hover main_table">
                                <!-- Table head -->
                                <thead class="blue-grey lighten-4">
                                <tr>
                                    <th>Номер сделки</th>
                                    <th>Контакт</th>
                                    <th>Телефон</th>
                                    <th>Срок</th>
                                    <th>Сумма</th>
                                    <th>Этап сделки</th>
                                    <th>Тип</th>
                                    <th>Примечание</th>
                                </tr>
                                </thead>
                                <!-- Table head -->

                                <!-- Table body -->
                                <tbody>
                                {% for doc in groupDocRequest %}
                                    <tr>
                                        <td><a data-toggle="modal" data-target="#centralModalLGRequestMain" class="n_sd">Заявка №{{ doc.id }}</a></td>
                                        <td>{{ doc.fio }}</td>
                                        <td>{{ doc.phone }}</td>
                                        <td>{{ doc.term }}</td>
                                        <td>3000</td>
                                        <td><button type="button" class="btn btn-red">{{ doc.getViewStatus() }}</button></td>
                                        <td>Обратный звонок</td>
                                        <td>Перезвонить через пол часа</td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                                <!-- Table body -->
                            </table>
                            <!-- Table  -->

                        </div>

                    </div>
                    <!--/.Card-->

                </div>
                <!--Grid column-->

            </div>
            <!--Grid row-->
            {% endfor %}
        </div>
    </main>
{% endblock %}

{% block javascripts %}
    {% include('/request/js/js-manager.html.twig') %}
{% endblock %}