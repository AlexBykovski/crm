<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>CRM система автоматизации</title>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- Bootstrap core CSS -->
    <link href="/css/bootstrap.min.css" rel="stylesheet">
    <!-- Material Design Bootstrap -->
    <link href="/css/mdb.min.css" rel="stylesheet">
    <!-- Your custom styles (optional) -->
    <link href="/css/style.min.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
</head>

<body class="grey lighten-3">

<!--Main Navigation-->
<header>
    <!-- Sidebar -->
    <div class="sidebar-fixed position-fixed">

        <a class="logo-wrapper waves-effect">
            <img src="/img/logo.png" class="img-fluid" alt="">
        </a>

        <div class="list-group list-group-flush">
            {% set route = app.request.attributes.get('_route') %}

            {% if app.user.hasRole("ROLE_MANAGER") %}
                <a href="{{ path("request_manager_list") }}" class="list-group-item {{ route == "request_manager_list" ? "active" : "list-group-item-action" }} waves-effect">
                    <i class="fa fa-pie-chart mr-3"></i>Заявки
                </a>
            {% endif %}

            <a href="{{ path("task_list") }}" class="list-group-item waves-effect {{ route == "task_list" ? "active" : "list-group-item-action" }}">
                <i class="fa fa-user mr-3"></i>Задачи</a>

            {% if app.user.hasRole("ROLE_LOGISTICIAN") %}
            <a href="{{ path("request_logistics_list") }}" class="list-group-item waves-effect {{ route == "request_logistics_list" ? "active" : "list-group-item-action" }}">
                <i class="fa fa-table mr-3"></i>Логистика</a>
            {% endif %}

            {% if app.user.hasRole("ROLE_PRINTER") %}
            <a href="{{ path("request_print_list") }}" class="list-group-item waves-effect {{ route == "request_print_list" ? "active" : "list-group-item-action" }}">
                <i class="fa fa-map mr-3"></i>Распечатка</a>
            {% endif %}
        </div>

    </div>
    <!-- Sidebar -->

</header>
<!--Main Navigation-->

{% block body %}{% endblock %}

<!--Footer-->
<footer class="page-footer text-center font-small primary-color-dark darken-2 mt-4 wow fadeIn">

    <!--Call to action-->
    <div class="pt-4">
        <a class="btn btn-outline-white" href="#"
           target="_blank" role="button">Какая-то кнопка
            <i class="fa fa-download ml-2"></i>
        </a>
        <a class="btn btn-outline-white" href="#" target="_blank" role="button">И еще кнопка
            <i class="fa fa-graduation-cap ml-2"></i>
        </a>
    </div>
    <!--/.Call to action-->

    <hr class="my-4">

    <!-- Social icons -->
    <div class="pb-4">
        <a href="#" target="_blank">
            <i class="fa fa-facebook mr-3"></i>
        </a>

        <a href="#" target="_blank">
            <i class="fa fa-twitter mr-3"></i>
        </a>

        <a href="#" target="_blank">
            <i class="fa fa-youtube mr-3"></i>
        </a>

        <a href="#" target="_blank">
            <i class="fa fa-google-plus mr-3"></i>
        </a>

        <a href="#" target="_blank">
            <i class="fa fa-dribbble mr-3"></i>
        </a>

        <a href="#" target="_blank">
            <i class="fa fa-pinterest mr-3"></i>
        </a>

        <a href="#" target="_blank">
            <i class="fa fa-github mr-3"></i>
        </a>

        <a href="#" target="_blank">
            <i class="fa fa-codepen mr-3"></i>
        </a>
    </div>
    <!-- Social icons -->

    <!--Copyright-->
    <div class="footer-copyright py-3">
        © 2018 Copyright:
        <a href="#" target="_blank"> CRM </a>
    </div>
    <!--/.Copyright-->

</footer>
<!--/.Footer-->
{% block javascripts %}{% endblock %}
</body>

</html>